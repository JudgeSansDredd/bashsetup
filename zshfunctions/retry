count=1
sleeptime=1
echo "${magenta}Attempt: ${cyan}${count}${default}"
"$@"
result=$?
while [ $result -ne 0 ];
do
    echo "${red}Waiting ${cyan}${sleeptime} ${red}seconds...${default}"
    sleep $sleeptime
    sleeptime=$(($sleeptime*2))
    count=$(($count+1))
    echo "${magenta}Attempt: ${cyan}${count}${default}"
    "$@"
    result=$?
done
